<div class="container panel-background">
    <div class="hero is-info welcome is-small profile-hero">
        <div class="hero-body has-text-centered">
            <div><img
                    src="../assets/default-profile.png"
                    alt="profile pic"
                /></div>
            <h1
                class="has-text-centered is-size-1"
            >{{UserAndFeedData.username}}</h1>
        </div>
    </div>
    <div class="info-tiles">
        <div class="tile is-ancestor has-text-centered">
            <div class="tile is-parent">
                <article class="tile is-child box">
                    <p class="title">{{profileCreatedCount}}</p>
                    <p class="subtitle">Feeds Created</p>
                </article>
            </div>
            <div class="tile is-parent">
                <article class="tile is-child box">
                    <p class="title">{{profileFollowersCount}}</p>
                    <p class="subtitle">Feeds Followers</p>
                </article>
            </div>
            <div class="tile is-parent">
                <article class="tile is-child box">
                    <p class="title">{{profileFollowedCount}}</p>
                    <p class="subtitle">Feeds Followed</p>
                </article>
            </div>
        </div>
    </div>
</div>
<div class="logged-in-user-id is-invisible">{{loggedInUserData.id}}</div>
<div class="current-profile-id is-invisible">{{UserAndFeedData.id}}</div>
<script src="../js/profile.js"></script>