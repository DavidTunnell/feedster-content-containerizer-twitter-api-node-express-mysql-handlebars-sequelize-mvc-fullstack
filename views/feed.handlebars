<section>
    <ul>
        <div>
            <ol>
                <div class="container pt-4">
                    <div class="row d-flex justify-content-center">
                        <div class="card" style="width: 57.5rem; padding: 0; border: 1px #7a7a7a">
                            <li class="list-group-item" style="background: #ccd6dd; justify-content: center; border: 2px solid #7a7a7a; border-bottom: none">
                                <h5 style="text-align: center"><a href="/feed/{{currentFeed.id}}">{{currentFeed.title}}</a> by <a
                                        href="/profile/{{currentFeed.user.id}}">{{currentFeed.user.username}}</a></h5>
                                {{#if ../loggedIn}}
                                <button style="float: right" class="follow-feed-button" data-feed-id="{{currentFeed.id}}"
                                    data-logged-in-user-id="{{../loggedInUserData.id}}"
                                    data-user-created-id="{{currentFeed.user_id}}">+</button>
                                {{/if}}
                            </li>
                            <ul class="list-group list-group-flush" style="border: 1px solid #7a7a7a">
                                {{#each currentFeed.tweetFeed}}
                                    <div class="tw-block-parent tw-background" style="border: 1px solid #7a7a7a">
                                        <div class="timeline-TweetList-tweet">
                                            <div class="timeline-Tweet">
                                            <div class="timeline-Tweet-brand">
                                                <div class="Icon Icon--twitter"></div>
                                            </div>
                                            <div class="timeline-Tweet-author">
                                                <a class="TweetAuthor-link" href="https://twitter.com/{{this.user.screen_name}}" target="_blank">
                                                <div class="TweetAuthor"><span class="TweetAuthor-avatar"> 
                                                    <div class="Avatar"><img src="{{this.user.profile_image_url_https}}" alt="{{this.user.name}}" class="tw-profile-img"></div></span><span class="TweetAuthor-name">{{this.user.name}}</span><span class="Icon Icon--verified"></span><span class="TweetAuthor-screenName">{{at_sign_format_twitter this.user.screen_name}}</span></div>
                                                </a>
                                            </div>
                                            <div class="timeline-Tweet-text">{{this.text}}</div>
                                            <div class="timeline-Tweet-metadata"><span class="timeline-Tweet-timestamp">{{format_time_twitter this.created_at}}</span></div>
                                            <ul class="timeline-Tweet-actions">
                                                <li class="timeline-Tweet-action"><a class="Icon Icon--heart" href="#"></a></li>
                                                <li class="timeline-Tweet-action"><a class="Icon Icon--share" href="#"></a></li>
                                            </ul>
                                            </div>
                                        </div>
                                    </div>
                                {{/each}}
                            </ul>
                        </div>
                    </ol>
                </div>
            </div>
            </div>
    </ul>
    <div class="container mb-5 pb-5">
        <div class="row d-flex justify-content-center" >
            <div class="col-md-12 col-lg-6" style="width: 59rem; margin-left: 4rem">
                <div class="card text-dark" style="border: 1px solid #7a7a7a">
                    {{!-- iterate through data from controller and create tweet feed --}}
                    {{#each feedComments}}
                    <div class="card-body p-3" style="border: 1px solid #7a7a7a">
                        <h7 style="float: right; color: #7a7a7a; font-size: 12px;">{{format_time_twitter this.createdAt}}</h7>
                        <div class="d-flex flex-start">
                            <img class="rounded-circle shadow-1-strong me-3" src="../assets/default-profile.png"
                                alt="avatar" width="45" height="45" />
                            <div>
                                <h6 class="fw-bold mb-1"><a href="/profile/{{this.user.id}}" style="text-decoration: none">{{this.user.username}}</a></h6>
                                <div class="d-flex align-items-center mb-2"></div>
                                <p class="mb-0 commentText">
                                    {{this.comment}}
                                </p>
                            </div>
                        </div>
                    </div>
                    {{/each}}
                    {{#if loggedIn}}
                    <input placeholder="Write a comment..." type="comment" class="comment-input" style="border: 1px solid #7a7a7a; height: 2.5rem;">
                        <button id="postBtn"
                            data-logged-in-user-id="{{loggedInUserData.id}}"
                            data-current-feed-id="{{currentFeed.id}}" style="position: absolute; bottom:0; right: 0; border-radius: 4px; border: 1px solid #7a7a7a; width: 10%; height: 2.5rem; background-color: #6d7981; color: #e1e8ed;">Post
                        </button>
                    </input>
                    {{/if}}
                </div>
            </div>
        </div>
    </div>
</section>

<script src="../js/comment.js"></script>
