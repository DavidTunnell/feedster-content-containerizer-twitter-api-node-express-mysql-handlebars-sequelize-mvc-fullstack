<section style="background-image: linear-gradient(to bottom,#55aceeff,rgb(247, 246, 246));">
    <ul>
        <div>
            <ol>
                <div class="card" style="width: 20%; float: left; margin-left: 7%">
                    <li class="list-group-item" style="background: #ccd6dd">
                        <h5 style="float: left"><a href="/feed/{{currentFeed.id}}">{{currentFeed.title}}</a> by <a
                                href="/profile/{{currentFeed.user.id}}">{{currentFeed.user.username}}</a></h5>
                        {{#if ../loggedIn}}
                        <button style="float: right" class="follow-feed-button" data-feed-id="{{currentFeed.id}}"
                            data-logged-in-user-id="{{../loggedInUserData.id}}"
                            data-user-created-id="{{currentFeed.user_id}}">+</button>
                        {{/if}}
                    </li>
                    <ul class="list-group list-group-flush">
                        {{#each currentFeed.tweetFeed}}
                            <div class="tw-block-parent tw-background">
                                <div class="timeline-TweetList-tweet">
                                    <div class="timeline-Tweet">
                                    <div class="timeline-Tweet-brand">
                                        <div class="Icon Icon--twitter"></div>
                                    </div>
                                    <div class="timeline-Tweet-author">
                                        <a class="TweetAuthor-link" href="https://twitter.com/{{this.user.screen_name}}" target="_blank">
                                        <div class="TweetAuthor"><span class="TweetAuthor-avatar"> 
                                            <div class="Avatar"><img src="{{this.user.profile_image_url_https}}" alt="{{this.user.name}}" class="tw-profile-img"></div></span><span class="TweetAuthor-name">{{this.user.name}}</span><span class="Icon Icon--verified"></span><span class="TweetAuthor-screenName">{{at_sign_format_twitter this.user.screen_name}}</span></div>
                                        </a>
                                    </div>
                                    <div class="timeline-Tweet-text">{{this.text}}</div>
                                    <div class="timeline-Tweet-metadata"><span class="timeline-Tweet-timestamp">{{format_time_twitter this.created_at}}</span></div>
                                    <ul class="timeline-Tweet-actions">
                                        <li class="timeline-Tweet-action"><a class="Icon Icon--heart" href="#"></a></li>
                                        <li class="timeline-Tweet-action"><a class="Icon Icon--share" href="#"></a></li>
                                    </ul>
                                    </div>
                                </div>
                            </div>
                        {{/each}}
                    </ul>
                </div>
            </ol>
        </div>
    </ul>
    <div class="container my-5 py-5">
        <div class="row d-flex justify-content-center">
            <div class="col-md-12 col-lg-6">
                <div class="card text-dark">
                    {{#each feedComments}}
                    <div class="card-body p-4">
                        <div class="d-flex flex-start">
                            <img class="rounded-circle shadow-1-strong me-3" src="../assets/default-profile.png"
                                alt="avatar" width="60" height="60" />
                            <div>
                                <h6 class="fw-bold mb-1"><a href="/profile/{{this.user.id}}">{{this.user.username}}</a>
                                    - {{format_time this.createdAt}}</h6>
                                <div class="d-flex align-items-center mb-3"></div>
                                <p class="mb-0 commentText">
                                    {{this.comment}}
                                </p>
                            </div>
                        </div>
                    </div>
                    {{/each}}
                    <hr class="my-0" />
                    {{#if loggedIn}}
                    <input placeholder="Write a comment..." type="comment" class="comment-input"><button id="postBtn"
                        data-logged-in-user-id="{{loggedInUserData.id}}"
                        data-current-feed-id="{{currentFeed.id}}">Post</button></input>
                    {{/if}}
                </div>
            </div>
        </div>
    </div>
</section>

<script src="../js/comment.js"></script>