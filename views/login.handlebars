{{!-- adjusted width/height of section to fit screen mw/mh--}}
<section class="mw-100 mh-100 p-3 gradient-custom"><br>
    <div class="container py-5 h-100"><br>
        <div class="row d-flex justify-content-center align-items-center h-100"><br>
            <div class="col-12 col-md-8 col-lg-6 col-xl-5"><br>
                <div class="main-card card text-black" style="border-radius: 1rem;"><br>
                    <div class="card-body p-5 text-center"><br>
                        {{!-- grouped all these inputs into a form for responsiveness --}}
                        <form class="mx-1 mx-md-4"><br>
                            <div class="mb-md-5 mt-md-4 pb-5"><br>
                                <h2 class="fw-bold mb-2 text-uppercase">Login</h2>
                                <p class="text-black mb-5">Please enter your registered email
                                    and password!</p>
                                {{!-- email --}}
                                <div class="form-outline form-white mb-4">
                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-envelope fa-lg me-3 fa-fw"></i> {{!-- added a font icon --}}
                                        <div class="form-outline flex-fill mb-0"></div> {{!-- mb-0 eliminates the margin
                                        bottom --}}
                                        <input type="email" id="typeEmailX"
                                            placeholder="Email e.g. feedsterfan2021@gmail.com"
                                            class="form-control form-control-lg" required/> {{!-- marked the field
                                        required and added a pattern pattern="^[A-Z0-9._%+-]+@[A-Z0-9.-]+\.[A-Z]{2,4}$" --}}
                                        <label class="form-label" for="typeEmailX" placeholder="Email"></label>
                                    </div>
                                </div>
                                {{!-- password --}}
                                <div class="form-outline form-white mb-4">
                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-lock fa-lg me-3 fa-fw"></i>{{!-- added a font icon --}}
                                        <div class="form-outline flex-fill mb-0"> {{!-- mb-0 eliminates the margin
                                            bottom --}}
                                            <input type="password" placeholder="Password (minimum 6 characters)"
                                                id="typePasswordX" class="form-control form-control-lg" required min="6"/> {{!-- marked the field required and added a
                                            pattern pattern="[A-Za-z0-9]"--}}
                                            <label class="form-label" for="typePasswordX"></label>
                                        </div>
                                    </div>
                                </div>
                                <button class="btn btn-black btn-outline-dark btn-lg px-5 gradient-custom login-submit"
                                    type="submit">Login</button>
                            </div>
                            <p class="mb-0">Don't have an account?
                                <a href="/signup/" class="text-black fw-bold">Sign Up</a>
                            </p>
                    </div>
                </div>
                </form>
            </div>
        </div>
    </div>
</section>
<script src="../js/login.js"></script>