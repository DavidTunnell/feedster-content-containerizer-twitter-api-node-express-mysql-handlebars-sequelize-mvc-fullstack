
<section class="feeds" style="margin-top: 3%">
    <ul>
        {{#each UserAndFeedData}}
            <div>
                <ol>
                    <div
                        class="card"
                        style="width: 20%; float: left; margin-left: 7%"
                    >
                        <li class="list-group-item" style="background: #ccd6dd">
                            <h5 style="float: left"><a
                                    href="/feed/{{this.id}}"
                                >{{this.title}}</a> by <a href="/profile/{{this.user.id}}">{{this.user.username}}</a></h5>
                            {{#if ../loggedIn}}
                                <button
                                    style="float: right"
                                    class="follow-feed-button"
                                >+</button>
                            {{/if}}
                        </li>
                        <ul class="list-group list-group-flush">
                            {{#each this.feed_sources}}
                                <li class="list-group-item">{{this.source}}</li>
                            {{/each}}
                        </ul>
                    </div>
                </ol>
            </div>
        {{/each}}
    </ul>
</section>